{
  "name": "invested",
  "version": "1.0.0",
  "description": "InvestEd - Investment Education Platform",
  "private": true,
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "install:all": "cd frontend && npm install && cd ../backend && npm install",
